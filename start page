<body>

  <!-- Bot rocket animation -->
  <div class="bot" id="bot">
    <img src="chatbot.png" alt="Chatbot Rocket">
  </div>

  <!-- Main container -->
  <div class="container" id="main-container">
    <img src="logo.png" alt="RIT Logo" class="logo">
    <h1>Welcome to RIT FAQ Assistant</h1>
    <p>Your AI-powered college chatbot assistant</p>
    <button class="start-btn" onclick="startChatbot()">
      <span>
        <img src="chatbot.png" alt="Bot Icon">
        Start Chatbot
      </span>
    </button>
    
  </div>

  <script>
    function startChatbot() {
      const bot = document.getElementById('bot');
      const container = document.getElementById('main-container');

      // Fade out content
      container.style.opacity = '0.3';

      // Show bot and trigger flying animation
      bot.style.opacity = '1';
      setTimeout(() => {
        bot.classList.add('fly');
      }, 300);

      // Redirect to chatbot page
      setTimeout(() => {
        window.location.href = "chatbot.html";
      }, 2200);
    }
  </script>
