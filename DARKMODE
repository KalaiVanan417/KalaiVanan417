      color: var(--text-color);
      background: var(--bg-color);
    }

    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 20px;
      backdrop-filter: blur(10px);
      background: var(--chat-bg);
    }

    .chat-box {
      flex: 1;
      overflow-y: auto;
      padding: 10px;
    }

    .message {
      padding: 10px;
      margin: 5px;
      border-radius: 8px;
